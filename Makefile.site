get:
	earthly +get
	rsync -ia provider.new/. provider/.
	rm -rf provider.new

venv:
	cd 3rdparty/python && poetry install
	
plan:
	earthly +plan --stack=spiral

show:
	earthly +show --stack=spiral

apply:
	earthly --push +apply --stack=spiral

fmt:
	pants format ::

docs:
	find html -name '*.css' | xargs rm
	find html -name '*.html' | xargs rm
	pants run src/defn:build_docs
	pants run src/foo:build_docs
