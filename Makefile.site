include ~/Makefile.common

pub:
	npx vite build
	echo preview > .vite-mode

dev:
	echo dev > .vite-mode

api:
	@env dom="$$(wait-tailscale-domain)" bash -c 'curl -sSL --resolve $$dom:443:$$(dig +short @100.100.100.100 $$dom) https://$$dom/api/meh' | jq .

pants:
	curl -sSL -o pants https://raw.githubusercontent.com/pantsbuild/setup/gh-pages/pants
	chmod 755 pants

go-update:
	go get -u ./cmd/...
