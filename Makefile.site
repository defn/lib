dev:
	tilt up --port=0 --stream

get:
	earthly +get
	rsync -ia provider.new/. provider/.
	rm -rf provider.new

venv:
	cd 3rdparty/python && poetry install
	
plan:
	earthly +plan --stack=spiral
	earthly +plan --stack=helix

show:
	earthly +show --stack=spiral
	earthly +show --stack=helix

apply-spiral:
	earthly --push +apply --stack=spiral

apply-helix:
	earthly --push +apply --stack=helix
